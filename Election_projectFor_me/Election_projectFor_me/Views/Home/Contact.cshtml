<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get the message from the ViewBag
        var message = '@ViewBag.MessageSent';

        if (message) {
            Swal.fire({
                title: 'تم إرسال رسالتك بنجاح',
                icon: 'success',
                confirmButtonText: 'موافق'
            });
        }
    });
</script>