@model Election_projectFor_me.Models.ContactFormModel
@{
    ViewBag.Title = "Contact";
    var messege = ViewBag.SuccessMessage;
}
<!--Banner Section ======================-->
<section class="section-banner banner-1 position-relative parallax" data-bs-theme="dark">
    <div class="container">
        <div class="banner-wrapper d-flex flex-column gap-3 gap-lg-20 justify-content-center align-items-lg-center">
            <h2 class="banner-heading mb-0">Contact Us</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="home-1.html" class="text-decoration-none link-hover-animation-1">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
                </ol>
            </nav>
        </div>
        <!-- banner-wrapper -->
    </div>
    <!-- container -->
</section>
<!--Banner Section ======================-->
<!--Contact Section ======================-->
<section class="section-contact contact-2 py-60 py-lg-100 py-xxl-120 bg-custom-light">
    <div class="container">
        <div class="row align-items-center gx-60 gy-40">
            <div class="col-lg-7">
                <h6 class="subtitle lead text-primary mb-10 wow fadeInLeft" data-wow-duration="1.4s">Contact Us</h6>
                <div class="d-flex flex-column gap-20">
                    <h2 class="mb-0 wow fadeInLeft" data-wow-delay=".3s" data-wow-duration="1.4s">Contact Information</h2>
                    <p class="mb-10 wow fadeInLeft" data-wow-delay=".5s" data-wow-duration="1.4s">
                        Have questions, suggestions, or just want to connect? We'd love to hear from you. Reach us using the contact information below, our team will get back to you as soon as possible.
                    </p>
                    <ul class="contact-lists list-unstyled mb-0 d-flex flex-column gap-3 wow fadeInLeft" data-wow-delay=".6s" data-wow-duration="1.4s">
                        <li class="d-flex gap-20 align-items-center">
                            <span class="contact-icon mail-icon text-white">
                                <svg width="22" height="18"><use xlink:href="#mail-icon"></use></svg>
                            </span>
                            <h5 class="mb-0 fw-semibold"><a href="mailto:info@politixy.com" class="text-decoration-none link-hover-animation-1">info@politixy.com</a></h5>
                        </li>
                        <li class="d-flex gap-20 align-items-center">
                            <span class="contact-icon location-icon text-white">
                                <svg width="22" height="22"><use xlink:href="#location-icon"></use></svg>
                            </span>
                            <h5 class="mb-0 fw-semibold"><a id="mapDirectionBtn" href="#" class="text-decoration-none link-hover-animation-1" data-bs-toggle="modal" data-bs-target="#RoutingMapModal">265 New Ave, Califonia City-1001, USA.</a></h5>
                        </li>
                        <li class="d-flex gap-20 align-items-center">
                            <span class="contact-icon phone-icon text-white">
                                <svg width="24" height="24"><use xlink:href="#phone-icon"></use></svg>
                            </span>
                            <h5 class="mb-0 fw-semibold"><a href="tel:(+0123)234556789" class="text-decoration-none link-hover-animation-1">(+0123) 2345 56789</a></h5>
                        </li>
                    </ul>
                    <!-- contact-lists -->
                </div>

            </div>
            <!-- col-7 -->

            <div class="col-lg-5">
                <div class="contact-image border-10 wow slideInRight" data-wow-duration="1.5s">
                    <img src="assets/images/contact-image-2.jpg" class="img-fluid" alt="contact-image">
                </div>
            </div>
            <!-- col-5 -->
        </div>
        <!-- row -->
    </div>
    <!-- container -->
</section>
<!--Contact Section ======================-->
<!--Contact Section ======================-->
<section class="section-contact contact-3 py-60 py-lg-100 py-xxl-120">
    <div class="container">
        <div class="contact-form-wrapper bg-custom-light p-4 p-lg-40">
            <h2 class="mb-30 mb-lg-40 text-lg-center wow fadeInUp">Get In Touch With Us</h2>

            @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="col-12">
                    <label for="InputName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="InputName" name="Name" required="">
                </div>

                <div class="col-12">
                    <label for="InputEmail" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="InputEmail" name="Email" required="">
                </div>
                <div class="col-12">
                    <label for="InputMessage" class="form-label">Message</label>
                    <textarea class="form-control" id="InputMessage" name="Message" rows="3"></textarea>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Submit Now</button>
                </div>
                <div class="response py-1"></div>
            }


        </div>
        <!-- contact-form-wrapper -->
    </div>
    <!-- container -->
</section>
<!--Contact Section ======================-->
<!--Volunteer Section ======================-->
