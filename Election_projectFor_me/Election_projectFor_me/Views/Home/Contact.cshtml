    <div class="container">
        <div class="volunteer-wrapper parallax position-relative text-bg-dark border-10 overflow-hidden wow slideInUp" data-bs-theme="dark">
            <div class="py-40 py-lg-60 px-3">
                <div class="row">
                    <div class="col-lg-7 offset-lg-3">
                        <div class="volunteer-inner d-flex flex-column gap-20 text-lg-center">
                            <h2 class="mb-0">Become a Volunteer</h2>
                            <p class="mb-3 mb-lg-20">Support Humanity & Country" campaign is a testament to our collective commitment towards fostering goodwill and progress within our society and nation.</p>
                            <div>
                                <a href="volunteer-1.html" class="btn btn-primary">Join Us Now</a>
                            </div>
                        </div>
                    </div>
                    <!-- col -->
                </div>
                <!-- row -->
            </div>
            <!-- volunteer-inner -->
        </div>
        <!-- volunteer-wrapper -->
    </div>
    <!-- container -->
</section>
<!--Volunteer Section ======================-->
